<!DOCTYPE html>
<html>
<head>
  <title>LynxShare</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=PT+Sans">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

</head>
<body class="thezone">

<% if session[:user_id] != nil%>
<div class="ui red vertical demo thin sidebar menu bg-lighter-gray active">
<%= image_tag("lynx2.png", class: "logo_image" )%>

  <%= render partial: "layouts/welcome" %>

  <a href="/links" class="item">
    <div class="side-item">
      <center>
          <i class="fa fa-home fa-fw"></i>&nbsp; Home</a>
      </center>
    </div>
  </a>

  <a href="/relationships" class="item">
    <div class="side-item">
      <center>
          Network
      </center>
    </div>
  </a>

  <a href="/links/new" class="item" >
    <div class="side-item">
      <center>
          Add Link
      </center>
    </div>
  </a>

  <a href="/tags" class="item">
    <div class="side-item">
      <center>
          Tags
      </center>
  </div>

  <a href="/users" class="item">
    <div class="side-item">
      <center>
          People
      </center>
  </div>
  </a>

  <%= render partial: "layouts/logout" %>

</div>

<% end %>

<%= yield %>

</body>
</html>
