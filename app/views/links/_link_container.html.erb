<% links.each do |link| %>
<div class="card">
	<%#= form_for(link, method: :delete) do |f| %>
  <%= link_to image_tag("http://www.iconsdb.com/icons/download/red/x-mark-512.png", size: "10x10", align: "left"), link, method: :delete, data: {confirm: "Are you sure you'd like to delete this?"} %>
		<!-- <a href="javascript:{}" class="left vert-align" onclick="document.getElementById('edit_link_<%= link.id %>').submit()"><i class="fa fa-remove fa-fw"></i></a> -->
	<%# end %>
	<%= link_to link.url, link.url, class: "red link" %> <br>
  	<% link.tags.each do |tag| %>
  		<%= link_to add_hashtag(tag.name), "/tags/#{tag.id}", class: "tag" %>
  	<% end %>

</div>

<% end %>
