<!-- Form for creating a new link -->
<div class="container-centered">
  <center>
    <h2 class="right-red">Add A New Link</h2>
<%= form_for @link do |form| %>
	<%= form.text_field :url, :placeholder => "URL" %> <br>
	<input type="text" name="tags" placeholder="#tags"> <br>
	<%= form.submit(:class => 'button-blue-outline mb1') %>
<% end %>
</center>
</div>
